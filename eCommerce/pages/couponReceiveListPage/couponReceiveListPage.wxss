page {
  background-color: #f6f6f6;
}
.ticket-list {
  margin-top: 23rpx;
}
.ticket {
  position: relative;
  width: 704rpx;
  margin: 0 auto 23rpx;
}
.ticket::before {
  content: '';
  position: absolute;
  bottom: 45rpx;
  left: -9rpx;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background-color: #f6f6f6;
  z-index: 10;
}
.ticket::after {
  content: '';
  position: absolute;
  bottom: 45rpx;
  right: -9rpx;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background-color: #f6f6f6;
  z-index: 10;
}
.ticket .top-section {
  width: 704rpx;
  height: 175rpx;
  margin: 0 auto;
  position: relative;
  overflow: hidden;
  background: #fff;
  border-top: 10rpx solid #ff4d64;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  box-shadow: 0px -5px 5px -5px rgba(0, 0, 0, 0.2), 
              5px 0px 5px -5px rgba(0, 0 , 0, 0.2),
              -5px 0px 5px -5px rgba(0, 0 , 0, 0.2);
}
.ticket .detail-info {
  position: absolute;
  top: 45rpx;
  left: 38rpx;
  width: calc( 100% - 210rpx);
}
.ticket .detail-info .name {
  color: #333;
  font-size: 35rpx;
  line-height: 35rpx;
  margin-bottom: 15rpx;
}
.ticket .detail-info .use-condition {
  color: #666;
  font-size: 26rpx;
  line-height: 30rpx;
  height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.ticket .background-word-area {
  position: absolute;
  right: -64rpx;
  top: -80rpx;
  padding: 10rpx;
  border: 1px solid #ff4d64;
  border-radius: 50%;
  color: #fff;
  opacity: 0.1;
}
.ticket .background-circle {
  width: 185rpx;
  height: 185rpx;
  line-height: 185rpx;
  background-color:#ff4d64;
  border-radius:50%;
}
.ticket .background-word {
  position:absolute;
  bottom: 50rpx;
  left: 50rpx;
  font-size: 66rpx;
  line-height: 66rpx;
}
.ticket .receive-btn {
  position: absolute;
  top: 88rpx;
  right: 36rpx;
  font-size: 26rpx;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #ff4d64;
  border-radius: 16rpx;
  color:#fff;
}
.ticket .top-section .right {
  float: left;
}
.ticket .bottom-section {
  position: relative;
  width: 704rpx;
  margin: 0 auto;
  height: 54rpx;
  line-height: 54rpx;
  text-indent: 1em;
  background: #fff;
  font-size: 18rpx;
  color: #999;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
}
.ticket .bottom-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 9rpx;
  width: calc(100% - 20rpx);
  border-top: 1px dashed #dbdbdb;
}
.ticket .bottom-section::after {
  content: '';
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 22px;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  box-shadow: 0px 0px 5px 0px rgba(0, 0 , 0, 0.2);
  z-index: -1;
}
.ticket.has-receive .top-section {
  border-color: #ccc!important;
}
.ticket.has-receive .background-word-area {
  border-color: #ccc!important;
}
.ticket.has-receive .background-circle {
  background-color: #ccc!important;
}
.ticket.has-receive .receive-btn {
  background-color: #ccc!important;
}
.goto-coupon-list {
  padding: 20rpx 0 40rpx;
  color: #ccc;
  text-align: center;
  font-size: 28rpx;
}
/*弹窗*/
.zc-toast-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: none;
  background: rgba(1,1,1,0.5);
  z-index: 999;
  /*opacity: 0;*/
  /*transition: opacity 3s linear;*/
}
.zc-toast-bg.show {
  /*opacity: 1;*/
  display: block;
}
.zc-toast {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -200rpx;
  margin-top: -82.5rpx;
  width: 320rpx;
  height: 85rpx;
  background: #fff;
  border-radius: 6px;
  padding: 40rpx;
}
.zc-toast .icon {
  position: absolute;
  top: 38rpx;
  left: 95rpx;
}
.zc-toast .title {
  position: absolute;
  top: 43rpx;
  left: 150rpx;
  height: 35rpx;
  line-height: 35rpx;
  color: #333;
  font-size: 35rpx;
}
.zc-toast .content {
  position: absolute;
  top: 95rpx;
  left: 0;
  width: 100%;
  height: 26rpx;
  line-height: 26rpx;
  color: #666;
  font-size: 26rpx;
  text-align: center;
}