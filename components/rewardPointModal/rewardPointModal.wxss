/* components/rewardPointModal/rewardPointModal.wxss */
@charset 'utf-8';
@import "/utils/font_icon.wxss";
.rewardPointModal-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.4);
  z-index: 999;
}
.rewardPointModal-win{
  position: absolute;
  top: 50%;
  left: 50%;
  padding-top: 77rpx;
  width: 560rpx;
  height: 343rpx;
  background: #fff;
  border-radius: 8rpx;
  transform: translateX(-50%) translateY(-50%);
}
.rewardPointModal-closes {
  position: absolute;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  font-size: 36rpx;
  color: #6e6e6e;
}
.rewardPointModal-bg {
  position: absolute;
  top: -157rpx;
  width: 100%;
  height: 234rpx;
  text-align: center;
  background-size: 358rpx 157rpx, 123rpx 140rpx;
  background-position: top center, bottom center;
  background-repeat: no-repeat, no-repeat;
}
.rewardPointModal-text {
  padding: 34rpx 0;
  text-align: center;
  line-height: 60rpx;
  font-size: 34rpx;
}
.rewardPointModal-rewardCount {
  color: #ff7100;
}
.rewardPointModal-button {
  margin-top: 14rpx;
  width: 460rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  background: #ff7100;
  color: #fff;
}
